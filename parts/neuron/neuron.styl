.neuron
  --nucleus: #29FFC6;
  --axon: #20E3B2;
  --terminal: #0CEBEB;
  --pulse: yellow;

  $base_size = 30px;
  font-size: 0.5em;

  filter: url("#glow-FFFFFF");

  &.selected
    filter: url("#glow-FF0000");

  &.motor
    --nucleus: #9E1B38;
    --axon: mix(#9E1B38, #F05350, 50%);
    --terminal: #F05350;

  &.logic
    --nucleus: #2D6DE9;
    --axon: mix(#2D6DE9, #12C2E9, 50%);
    --terminal: #12C2E9;

  &.memory
    --nucleus: #EC008C;
    --axon: mix(#EC008C, #FC6767, 50%);
    --terminal: #FC6767;

    .memory-icon
      position: relative;
      width: $base_size;
      height: $base_size;
      font-size: @width * 0.75;
      pointer-events: none;

      i
        overlay();
        display: flex;
        width: inherit;
        height: inherit;
        align-items: center;
        justify-content: center;
        line-height: 1;
        color: black;

      &.pulse-icon
        width: ($base_size / 2);
        height: ($base_size / 2);
        font-size: @width * 0.8;

  &.language
    --nucleus: #1E6305;
    --axon: mix(#1E6305, #BDFF00, 50%);
    --terminal: #BDFF00;

  .neuron-inner
    filter: url("#goo");

  .nucleus.flashing, .terminal.flashing
    circle.real
      animation: 0.5s flash 4;


  .nucleus
    circle.real
      fill: var(--nucleus);
    circle.halo
      fill: transparent;

  .axon
    path
      fill: var(--axon);

  .terminal
    circle.real
      fill: var(--terminal);
    circle.halo
      fill: transparent;

  .pulse
    fill: var(--pulse);
    pointer-events: none;

  .label
    .tape
      fill: #fcf7dd;
    text
      font: 18px cursive;
      alignment-baseline: middle;
      pointer-events: none;
      user-select: none;
