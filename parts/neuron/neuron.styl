.neuron
  --nucleus: #29FFC6;
  --axon: #20E3B2;
  --terminal: #0CEBEB;
  --pulse: yellow;

  pointer-events: auto;

  &.motor
    --nucleus: #9E1B38;
    --axon: mix(#9E1B38, #F05350, 50%);
    --terminal: #F05350;

  &.logic
    --nucleus: #2D6DE9;
    --axon: mix(#2D6DE9, #12C2E9, 50%);
    --terminal: #12C2E9;

  &.memory
    --nucleus: #EC008C;
    --axon: mix(#EC008C, #FC6767, 50%);
    --terminal: #FC6767;

    .memory-icon
      position: relative;
      width: 60px;
      height: 60px;
      font-size: 2em;
      pointer-events: none;

      i
        overlay();
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
        color: black;

      &.pulse-icon
        width: 30px;
        height: 30px;
        font-size: 1em;

  &.language
    --nucleus: #1E6305;
    --axon: mix(#1E6305, #BDFF00, 50%);
    --terminal: #BDFF00;

  .neuron-inner
    filter: url("#goo");

  .nucleus
    circle
      fill: var(--nucleus);

  .axon
    path
      fill: var(--axon);

  .terminal
    circle
      fill: var(--terminal);

  .pulse
    fill: var(--pulse);
    pointer-events: none;

  .label
    .tape
      fill: #fcf7dd;
      pointer-events: auto;
    text
      font: 18px cursive;
      alignment-baseline: middle;
      pointer-events: none;
      user-select: none;
