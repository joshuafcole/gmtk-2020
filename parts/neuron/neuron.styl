.neuron
  --nucleus: indigo;
  --axon: mix(indigo, blue, 50%);
  --terminal: blue;
  --pulse: yellow;

  &.motor
    --nucleus: lawngreen;
    --axon: cyan;
    --terminal: #87CEFA

  &.logic
    --nucleus: red;
    --axon: mix(red, orange, 50%);
    --terminal: orange;

  .neuron-inner
    filter: url("#goo");

  .nucleus
    circle
      fill: var(--nucleus);

  .axon
    path
      fill: var(--axon);

  .terminal
    circle
      fill: var(--terminal);

  .pulse
    fill: var(--pulse);

  .label
    .tape
      fill: #fcf7dd;
    text
      font: 18px cursive;
      alignment-baseline: middle;
      pointer-events: none;
      user-select: none;
