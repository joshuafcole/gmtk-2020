@import "../../util.styl";

editor, editor-content
  overlay();
  pointer-events: none;

editor-content
  editing-notice
    position: absolute;
    right: 0; top: 0;
    margin: 0.25em;
    padding: 0.25em;
    align-items: center;
    justify-content: center;
    font-size: 2em;
    border-radius: 4px;
    background: rgba(white, 0.2);
    backdrop-filter: blur(3px);

    .tool-icon
      margin-top: 0.25em;

  editor-properties
    position: absolute;
    bottom: 0.5em; right: 0.5em;
    background: rgba(white, 0.5);
    border: 1px solid #ccc;
    backdrop-filter: blur(5px);
    border-radius: 4px;

    property-grid
      display: grid;
      grid-template-columns: auto 1fr;
      grid-auto-rows: auto;
      pointer-events: auto;

      h3, name, value, button
        padding: 0.125em 0.25em;
        border-bottom: 1px solid rgba(black, 0.25);

      h3, button
        grid-column: span 2;

      h3
        flex-direction: row;
        align-items: center;
        padding: 0 0.25em;
        margin: 0;

        button
          font-size: 1rem;
          border-bottom: none;

      button
        font-size: 1.5em;
        align-items: center;
        border: none;
        border-bottom: 1px solid rgba(black, 0.25);
        background: none;
        transition: background 0.2s ease;

        &.remove


        &:hover
          background: rgba(white, 0.2);

        &:active
          background: rgba(white, 0.4);

      label
        display: contents;

        name
          background: rgba(white, 0.4);
          box-shadow: 2px 0 3px rgba(black, 0.1);

        value
          background: rgba(white, 0.2);
