@import "../../util.styl";

dialog-layer
  overlay();
  pointer-events: none;

  dialog-box
    position: absolute;
    bottom: 0; left: 0; right: 0;
    pointer-events: auto;

  dialog-message
    padding: 1rem 3rem;

    background: linear-gradient(to bottom, rgba(#333, 0.8), rgba(#111, 0.8) 75%, rgba(#161616, 0.8));
    backdrop-filter: blur(3px);
    border-top: 1px solid #888;
    color: white;
    font-size: 1.25rem;
    white-space: pre-wrap;
    user-select: none;

    &:after
      content: "";
      overlay();
      scanline();
      opacity: 0.5;
      pointer-events: none;

    author
      position: absolute;
      left: -1px; bottom: calc(100% - 1rem);

      margin-left: 2rem;
      padding: 0 1rem;

      background: #ccc;
      border: 1px solid #888;
      border-radius: 4px;
      border-bottom-left-radius: 0;
      color: black;
      font-size: 1.5rem;
      z-index: 1;

    &.author-narrator author
      background: #BDFF00;

    &.author-foreman author
      background: #F09819;

    &.author-sensory-crew author
      background: #FF7A72;

    &.author-developer author
      background: #2BC0E4;
